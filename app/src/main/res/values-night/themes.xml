<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SharkPlayer" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.SharkPlayer.ActionBar" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>